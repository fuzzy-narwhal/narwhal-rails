<h1>Listing posts</h1>

<table>
  <tr>
    <th>Likes</th>
    <th>Post</th>
    <th>From</th>
    <th>To</th>
    <th>Message</th>
    <th>Picture</th>
    <th>Link url</th>
    <th>Link name</th>
    <th>Link caption</th>
    <th>Link description</th>
    <th>Movie url</th>
    <th>Icon</th>
    <th>Attribution</th>
    <th>Created time</th>
    <th>Updated time</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.likes %></td>
    <td><%= post.post_id %></td>
    <td><%= post.from %></td>
    <td><%= post.to %></td>
    <td><%= post.message %></td>
    <td><%= post.picture %></td>
    <td><%= post.link_url %></td>
    <td><%= post.link_name %></td>
    <td><%= post.link_caption %></td>
    <td><%= post.link_description %></td>
    <td><%= post.movie_url %></td>
    <td><%= post.icon %></td>
    <td><%= post.attribution %></td>
    <td><%= post.created_time %></td>
    <td><%= post.updated_time %></td>
    <td><%= post.comments %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

