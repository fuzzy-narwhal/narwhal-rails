<div id="feed">

    All news
    <ul>
      <% @posts.each do |post| %>
      <li>
        <div class="image-left">
          <%= image_tag post.page.profile_picture_url, :width => 50, :height => 50 %>
        </div>
        <div class="text-right">
          <span class="feed-title"><%= link_to post.page.name, post.page.link if post.page.link %></span>
          <div class="feed-body">
